<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.levipayne.lifequest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.levipayne.lifequest.LifeQuestApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.levipayne.lifequest.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.levipayne.lifequest.AddQuestActivity"
            android:label="@string/activity_add_quest_label" />
        <activity
            android:name="com.levipayne.lifequest.AddRewardActivity"
            android:label="@string/activity_add_reward_label" />
        <activity
            android:name="com.levipayne.lifequest.QuestDetailsActivity"
            android:label="@string/activity_quest_details_label" />
        <activity
            android:name="com.levipayne.lifequest.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.levipayne.lifequest.RewardDetailsActivity"
            android:label="@string/activity_reward_details_label" />

        <activity android:name="com.levipayne.lifequest.PastQuestDetailsActivity" />
        <activity android:name="com.levipayne.lifequest.ForgotPasswordActivity"></activity>
    </application>

</manifest>