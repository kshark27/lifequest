<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.levipayne.liferpg">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LifeQuestApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddQuestActivity"
            android:label="@string/activity_add_quest_label" />
        <activity
            android:name=".AddRewardActivity"
            android:label="@string/activity_add_reward_label" />
        <activity
            android:name=".QuestDetailsActivity"
            android:label="@string/activity_quest_details_label" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RewardDetailsActivity"
            android:label="@string/activity_reward_details_label" />

        <activity android:name=".PastQuestDetailsActivity" />
        <activity android:name=".ForgotPasswordActivity"></activity>
    </application>

</manifest>